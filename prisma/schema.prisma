// prisma/schema.prisma
datasource db {
  provider  = "postgresql"
  // uncomment next line if you use Prisma <5.10
  // directUrl = env("DATABASE_URL_UNPOOLED")
}

//tables
model Product {
  id          Int            @id @default(autoincrement())
  name        String
  description String?
  model       String
  manufacturer      String
  createYear  String
  price       Float
  categoryId    Int
  category      ProductCategory @relation(fields: [categoryId], references: [id])
  typeId        Int
  productType   ProductType     @relation(fields: [typeId], references: [id])
  images      ProductImage[] 
  createdAt   DateTime       @default(now())
}

model ProductImage {
  id        Int     @id @default(autoincrement())
  url       String  // Ссылка на фото
  productId Int     // ID товара, к которому привязано фото
  // Настройка связи: при удалении товара удаляются и его фото (onDelete: Cascade)
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)
}

model ProductCategory {
  id        Int     @id @default(autoincrement())
  name      String  @unique
  types     ProductType[]
  products  Product[]
}

model ProductType {
  id        Int    @id @default(autoincrement())
  name      String  @unique
  typeUrl   String  @unique
  categoryId  Int
  category    ProductCategory @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  products  Product[]
  @@unique([name, categoryId])
}
