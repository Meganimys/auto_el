generator client {
  provider = "prisma-client-js" 
  // Полностью удалите строку output
}


// prisma/schema.prisma
datasource db {
  provider  = "postgresql"
  // uncomment next line if you use Prisma <5.10
  // directUrl = env("DATABASE_URL_UNPOOLED")
}

//tables
model User {
  id        String     @id
  login     String     @unique
  email     String     @unique
  createdAt DateTime   @default(now())
  
  // Связь с товарами в корзине
  cart      CartItem[] 
}

model Product {
  id           Int            @id @default(autoincrement())
  name         String
  description  String?
  model        String
  manufacturer String
  createYear   String
  price        Float
  
  categoryId   Int
  category     ProductCategory @relation(fields: [categoryId], references: [id])
  
  typeId       Int
  productType  ProductType     @relation(fields: [typeId], references: [id])
  
  images       ProductImage[]
  
  // Кто добавил этот товар в корзину (через промежуточную таблицу)
  inCarts      CartItem[]
  
  createdAt    DateTime        @default(now())
}

// Модель для корзины
model CartItem {
  id        Int      @id @default(autoincrement())
  userId    String
  productId Int
  quantity  Int      @default(1) // Можно указать количество товара

  user      User     @relation(fields: [userId], references: [id])
  product   Product  @relation(fields: [productId], references: [id])

  @@unique([userId, productId]) // Чтобы один и тот же товар не дублировался в корзине у одного юзера
}


model ProductImage {
  id        Int     @id @default(autoincrement())
  url       String  // Ссылка на фото
  productId Int     // ID товара, к которому привязано фото
  // Настройка связи: при удалении товара удаляются и его фото (onDelete: Cascade)
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)
}

model ProductCategory {
  id        Int     @id @default(autoincrement())
  name      String  @unique
  types     ProductType[]
  products  Product[]
}

model ProductType {
  id        Int    @id @default(autoincrement())
  name      String  @unique
  typeUrl   String  @unique
  categoryId  Int
  category    ProductCategory @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  products  Product[]
  @@unique([name, categoryId])
}
